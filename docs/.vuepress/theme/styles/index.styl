.icon.outbound {
  display: none;
}


.sidebar {
  font-style normal !important
}

.content__default {
  h1 {
    position: relative;
  }

  a {
    cursor pointer
    @media (min-width: $MQMobile) {
      color $colorFont
    }
  }


  @media (min-width: $MQMobile) {
    a {
      max-width 100%
      position: relative;
      display: inline-block;
      vertical-align bottom
    }

    a:after {
      content: "";
      position: absolute;
      top: 60%;
      left: -0.1em;
      right: -0.1em;
      bottom: 10%;
      transition: top 200ms cubic-bezier(0, 0.8, 0.13, 1);
      background-color: alpha($accentColor, 0.2);
    }

    a:hover {
      text-decoration: none !important;

      &:after {
        top: 10%;
      }
    }
  }
}

p
  margin-top: 1.2em;

blockquote
  box-shadow: inset 3px 0 0 0 rgba(0, 0, 0, 0.84);
  border-left: none;
  margin-top: 2em;
  font-style: italic;
  color: $colorInactive;
  font-size: 21px;
  padding-left: 23px;

@import '~prismjs/themes/prism-tomorrow.css'

div[class*="language-"]
  position: relative;
  background-color: $colorFont;
  border-radius: 6px;

.theme-default-content pre, .theme-default-content pre[class*="language-"] {
  background white
  line-height: 1.4;
  padding: 1.25rem 1.5rem;
  margin: 0.85rem 0;
  background-color: $colorFont;
  border-radius: 6px;
  overflow: auto;
  font-size 1rem;
  letter-spacing 0.5px

  .token.atrule, .token.attr-value, .token.keyword {
    color: #63DAF5;
  }
}

strong {
  font-weight: 900;
}

h1 a::after {
  display none
}


// Sidebar defaults to right at Blog Layout
.theme-container.layout-post {
  h1 a.header-anchor {
    padding-right 10px
  }

  .sidebar {
    .sidebar-group.depth-0 p {
      display none
    }

    a.sidebar-link.active {
      border-width 3px
      border-color $siderbarItemColor
      color: $siderbarItemColor!important;
    }


    a.sidebar-link:hover {
      color: $siderbarItemColor !important;
    }

    .sidebar-group a.sidebar-link {
      font-family "Cardo"
      padding-left: 1.5rem;
      color #999
    }
  }

  @media (min-width: $MQMobile) {
    .theme-default-content.content__default:not(.custom) > h1 {
      margin-top 3rem !important

      &:first-child {
        margin-top -1.5rem
        margin-bottom 1rem
      }
    }

    .sidebar {
      left auto
      right 0
    }

    .page {
      padding-left: 5rem
      padding-right 20rem
    }
  }
}



// Sidebar defaults to right at Blog Layout
.theme-container.layout-post {
  h1 a.header-anchor {
    padding-right 10px
  }

  .sidebar {
    //box-shadow: 0px 0px 15px 0px rgba(132, 132, 132, 0.2) !important;
    display flex
    align-items top
    margin-top 2rem

    .sidebar-group.depth-0 p {
      display none
    }

    a.sidebar-link.active {
      border-width 2px
      border-color $siderbarItemColor
      color: $siderbarItemColor!important;
    }


    a.sidebar-link:hover {
      color: $siderbarItemColor !important;
    }

    .sidebar-group a.sidebar-link {
      font-family "Cardo"
      padding-left: 1.2rem;
      color #333
      font-size 1em
    }
  }

  @media (min-width: $MQMobile) {
    .theme-default-content.content__default:not(.custom) > h1 {
      margin-top 3rem !important

      &:first-child {
        margin-top -1.5rem
        margin-bottom 1rem
      }
    }

    .sidebar {
      left auto
      right 0
    }

    .page {
      padding-left: 5rem
      padding-right 20rem
    }
  }

  @media (max-width: $MQMobile) {

    .theme-default-content:not(.custom) {
      padding-top 0 !important
    }

    .theme-default-content.content__default:not(.custom) > h1 {
      margin-top 0 !important
    }

    .theme-default-content div[class*="language-"] {
      border-radius: 6px !important
      margin 0 !important
    }

    .page {
      padding-top: 3rem !important
    }

  }
}



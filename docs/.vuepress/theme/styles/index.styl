@import '~prismjs/themes/prism-tomorrow.css'


.code-copy {
  position: absolute;
  top: 6px;
  //bottom 14px
  left: 6px;
  display: flex;
  flex-direction row
  justify-content: center;
  align-items: center;
  width: 30px;
  height: 18px;
  cursor: pointer;
  font-size: 14px;
  padding: 0;
  border: none;
  border-radius: 4px;
  color: #ccc;
  background-color: hsla(0, 0%, 90.2%, .2);
  box-shadow: 0 2px 0 0 rgba(0, 0, 0, .25);
  opacity: 0;
  visibility: visible;
  -webkit-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  user-select: none;
  transition: opacity .2s ease-in-out, visibility .2s ease-in-out;
  z-index: 1;

  span {
    background-color white
    position: fixed;
    top 20%
    left 50%
    transform translateX(-50%)
    font-size 16px !important
    //left 3rem
    line-height 50px
    height 50px
    bottom 0 !important
    width 120px
    text-align center
    color #3eaf7c
    font-weight bold
    border-radius 6px
    z-index: 1100;
    box-shadow: 0px 0px 15px 5px rgba(132, 132, 132, 0.4) !important;
    transition: top 200ms cubic-bezier(0, 0.8, 0.13, 1);
  }
}

.code-copy svg {
  position: relative;
  right 0 !important
  bottom 0 !important
  width 12px
  height 12px
  opacity: 1 !important
}

div[class*="language-"]:hover {
  .code-copy {
    opacity: 1 !important;
  }
}


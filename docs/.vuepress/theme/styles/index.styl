.content__default {
  h1 {
    position: relative;
  }

  a {
    cursor pointer
    @media (min-width: $MQMobile) {
      color $colorFont
    }
  }


  @media (min-width: $MQMobile) {
    a {
      max-width 100%
      position: relative;
      display: inline-block;
      vertical-align bottom
    }

    a:after {
      content: "";
      position: absolute;
      top: 60%;
      left: -0.1em;
      right: -0.1em;
      bottom: 10%;
      transition: top 200ms cubic-bezier(0, 0.8, 0.13, 1);
      background-color: alpha($accentColor, 0.2);
    }

    a:hover {
      text-decoration: none !important;

      &:after {
        top: 10%;
      }
    }
  }
}

